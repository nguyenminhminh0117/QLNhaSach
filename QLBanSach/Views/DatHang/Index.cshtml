@model IEnumerable<QLBanSach.Models.DATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";

}

<div class="card mb-3" style="padding-top:45px;">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách đơn đặt hàng
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.sdt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngaydat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngaygiao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tongdonhang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tinhtrang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KHACHHANG.tenkh)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.sdt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngaydat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngaygiao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tongdonhang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tinhtrang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KHACHHANG.tenkh)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.sdt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngaydat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngaygiao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tongdonhang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tinhtrang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.tenkh)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.madathang }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.madathang }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.madathang })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
