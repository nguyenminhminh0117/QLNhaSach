@model IEnumerable<QLBanSach.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div class="card mb-3" style="padding-top:45px;">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách khách hàng
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenkh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sodienthoai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.matkhaukh)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenkh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.diachi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sodienthoai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.matkhaukh)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenkh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sodienthoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.matkhaukh)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.makh }) 
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.makh }) 
                                @Html.ActionLink("Xóa", "Delete", new { id = item.makh })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
