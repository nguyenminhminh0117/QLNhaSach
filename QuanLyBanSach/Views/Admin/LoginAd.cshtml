@model QuanLyBanSach.Models.NHANVIEN
@{
    ViewBag.Title = "loginAd";
    Layout = null;

}
<title>Login Page</title><meta charset="UTF-8" />
<link rel="stylesheet" href="~/FONTADMIN/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/FONTADMIN/css/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/FONTADMIN/css/matrix-login.css" />
<link href="~/FONTADMIN/font-awesome/css/font-awesome.css" rel="stylesheet" />
<h2 style="text-align:center;color:white;">Trang Đăng nhập</h2>
@using (Html.BeginForm("LoginAd", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        <div id="loginbox">
            <form id="loginform" class="form-vertical" action="index.html">
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_lg"><i class="icon-user"> </i></span>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                            @Html.EditorFor(model => model.matkhaunv, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.matkhaunv, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Đăng nhập" class="btn btn-default" />
                    </div>
                </div>
                <h3 style="text-align:center;color:white;">@ViewBag.Msg</h3>
            </form>
        </div>
}
<script src="~/FONTADMIN/js/jquery.min.js"></script>
<script src="~/FONTADMIN/js/matrix.login.js"></script>

