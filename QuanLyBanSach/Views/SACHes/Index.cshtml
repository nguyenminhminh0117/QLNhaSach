@using PagedList;
@using PagedList.Mvc;

@model IPagedList<QuanLyBanSach.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin các loại sách</h2>

<p>
    @Html.ActionLink("Thêm sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().THELOAI.tentheloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().tensach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().dongiaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().luotmua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().anhbia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().tacgia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.THELOAI.tentheloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tensach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dongiaban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.luotmua)
            </td>
            <td>
                <img src="~/images/@item.anhbia" style="width:85px;height:70px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tacgia)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.masach })|
                @Html.ActionLink("Chi tiết", "Details", new { id = item.masach }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.masach })
            </td>
        </tr>
    }

</table>
<div class="pagination" style="display:inline ; text-align:right;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), PagedListRenderOptions.PageNumbersOnly)
</div>
